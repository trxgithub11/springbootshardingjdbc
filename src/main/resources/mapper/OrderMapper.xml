<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.trx.sharding.springbootshardingdemo.mapper.OrderMapper">
  <resultMap id="BaseResultMap" type="com.trx.sharding.springbootshardingdemo.entity.Order">
    <id column="order_id" jdbcType="BIGINT" property="orderId" />
    <result column="user_id" jdbcType="BIGINT" property="userId" />
  </resultMap>

  <sql id="Base_Column_List">
    order_id, user_id
  </sql>

  <select id="selectByPrimaryKey" parameterType="java.lang.Long" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from t_order
    where order_id = #{orderId}
  </select>


  <insert id="insert" parameterType="com.trx.sharding.springbootshardingdemo.entity.Order">
    insert into t_order (order_id, user_id)
    values (#{orderId,jdbcType=BIGINT}, #{userId,jdbcType=BIGINT})
  </insert>


  <update id="updateByPrimaryKeySelective" parameterType="com.trx.sharding.springbootshardingdemo.entity.Order">
    update t_order
    <set>
      <if test="userId != null">
        user_id= #{userId,jdbcType=BIGINT},
      </if>
    </set>
    where order_id = #{orderId,jdbcType=BIGINT}
  </update>

</mapper>