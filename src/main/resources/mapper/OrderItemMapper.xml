<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.trx.sharding.springbootshardingdemo.mapper.OrderItemMapper">
  <resultMap id="BaseResultMap" type="com.trx.sharding.springbootshardingdemo.entity.OrderItem">
    <id column="order_id" jdbcType="BIGINT" property="orderId" />
    <result column="user_name" jdbcType="VARCHAR" property="userName" />
    <result column="account" jdbcType="VARCHAR" property="account" />
    <result column="password" jdbcType="VARCHAR" property="password" />
  </resultMap>

  <sql id="Base_Column_List">
    order_id, user_name, account, password
  </sql>

  <select id="selectByPrimaryKey" parameterType="java.lang.Long" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from t_order_item
    where order_id = #{orderId}
  </select>


  <insert id="insert" parameterType="com.trx.sharding.springbootshardingdemo.entity.OrderItem">
    insert into t_order_item (order_id, user_name, account, password)
    values (#{orderId,jdbcType=BIGINT}, #{userName,jdbcType=VARCHAR}, #{account,jdbcType=VARCHAR},#{password,jdbcType=VARCHAR})
  </insert>


  <update id="updateByPrimaryKeySelective" parameterType="com.trx.sharding.springbootshardingdemo.entity.OrderItem">
    update t_order_item
    <set>
      <if test="userName != null">
        user_name = #{userName,jdbcType=VARCHAR},
      </if>
      <if test="account != null">
        account = #{account,jdbcType=VARCHAR},
      </if>
      <if test="password != null">
        password = #{password,jdbcType=VARCHAR},
      </if>
    </set>
    where order_id = #{orderId,jdbcType=BIGINT}
  </update>

</mapper>